proj_name = commonui

!ifndef name
name = commonui
!endif

!ifndef commonui_autodepends
commonui_autodepends = .autodepend
!endif

sys_windowed = 1

!include cproj.mif
!include defrule.mif
!include deftarg.mif

!include $(wpi_dir)/client.mif

!include $(wdisasm_dir)/client.mif

msgfiles = &
        ../res/about.msg &
        ../res/alias.msg &
        ../res/hint.msg &
        ../res/log.msg &
        ../res/memwnd.msg &
        ../res/savelbox.msg

