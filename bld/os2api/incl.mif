!ifdef dirs$(hdr_cpu)
$(dirs$(hdr_cpu)):
    @if not exist $@ mkdir $@
!endif

clean : .SYMBOLIC
    rm -f *.h
    rm -rf $(dirs$(hdr_cpu))
