all : $(dirs$(hdr_cpu)) $(headers$(hdr_cpu)) .SYMBOLIC

.mh: ../../$(incl$(hdr_cpu))

.mh.h:
    @%make echo_wsplice
    $(wsplice) $(wsplice_opts)

{arpa}.mh{arpa}.h:
    @%make echo_wsplice
    $(wsplice) $(wsplice_opts)

{GL}.mh{GL}.h:
    @%make echo_wsplice
