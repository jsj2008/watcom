CPPFLAGS = -I$(OWOBJDIR) -Ih -I../watcom/h -I../lib_misc/h $(DEFS)
CFLAGS = -fsigned-char -fno-common -g -O2 -Wall -Wno-switch
DEFS = -D__LINUX__ -D__UNIX__= -DUNIX -Uunix -DBOOTSTRAP -DWMAKE -D_BLDVER=$OWBLDVERTOOL -D_CYEAR=

$(OWOBJDIR)/%.o : %.c
	$(CC) -c $(CFLAGS) $(CPPFLAGS) -o $@ $<

vpath %.c c ../watcom/c ../builder/c

all: $(OWOBJDIR) $(OWBINDIR)/wmake

CFILES=macros.c main.c mautodep.c mautoomf.c mautoorl.c mautores.c \
 mcache.c memory.c mexec.c mglob.c mhash.c misc.c mlex.c mlexmac.c mlexprs.c \
 mparse.c mpreproc.c mrcmsg.c msg.c mstream.c msuffix.c msysdep.c \
 mtarget.c mupdate.c mvecstr.c dostimet.c clibext.c

OBJS=$(CFILES:.c=.o)
OBJS:=$(foreach i,$(OBJS),$(OWOBJDIR)/$i)

$(OWOBJDIR)/wsplice.exe: $(OWOBJDIR)/wsplice.o $(OWOBJDIR)/clibext.o
	$(CC) -g $^ -o $@

$(OWOBJDIR)/usage.gh : h/usage.sp $(OWOBJDIR)/wsplice.exe
	$(OWOBJDIR)/wsplice.exe -kIS_RC -kENGLISH -f '{MSG_USAGE_BASE+%#%+, "%s"},' h/usage.sp $@

$(OWOBJDIR)/cretype.exe : cretype.c
	$(CC) -I../watcom/h -o $@ $<

$(OWOBJDIR)/isarray.gh : $(OWOBJDIR)/cretype.exe
	$< > $@

$(OWBINDIR)/wmake: $(OWOBJDIR)/wmake.exe
	cp $< $@

$(OWOBJDIR)/wmake.exe: $(OWOBJDIR)/usage.gh $(OWOBJDIR)/isarray.gh $(OBJS)
	$(CC) -g $(OBJS) -o $@

$(OWOBJDIR):
	mkdir $(OWOBJDIR)

clean:
	rm -f $(OWOBJDIR)/*.o $(OWOBJDIR)/*.gh $(OWOBJDIR)/*.exe
