    wndsel.obj &
    wndsrch.obj &
    wndfdlg.obj &
    wnddlg.obj &
    dlgsrch.obj &
    dlgpick.obj &
    dlgnew.obj &
    wndspawn.obj &
    wndalloc.obj &
