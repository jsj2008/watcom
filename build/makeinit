# don't ask, just nuke the files
.ERASE

bld_ver       = $+$(%OWBLDVER)$-
bld_ver_str   = $+$(%OWBLDVERSTR)$-
bld_ver_tool  = $+$(%OWBLDVERTOOL)$-
curr_year     =
!if $(__VERSION__) > 1290
curr_year     = $+$(%__CYEAR__)$-
!endif
patch_level   = 0
contrib_dir   = $+$(%OWROOT)$-/contrib
build_dir     = $+$(%OWROOT)$-/build
src_dir       = $+$(%OWSRCDIR)$-
bld_dir       = $+$(%OWBINDIR)$-/bld
docs_dir      = $+$(%OWDOCSDIR)$-

bin_subdir    = $+$(%OWOBJDIR)$-
!ifdef %OWDLLOBJDIR
dll_subdir    = $+$(%OWDLLOBJDIR)$-
!else
dll_subdir    = dllobjs
!endif

!ifdef %OWVERBOSE
verbose       = $+$(%OWVERBOSE)$-
!else
verbose       = 0
!endif

noecho = @
!ifneq verbose 0
noecho =
!endif

mif_path      = $(build_dir)/mif

.mif: $(mif_path)

!ifeq %OWTOOLS WATCOM
__WATCOM_TOOLS__ = $(%OWTOOLSVER)
!if $(%OWTOOLSVER) >= 1300
bldnewowtools = 1
!endif
!else ifeq %OWTOOLS VISUALC
__MSVC_TOOLS__ = $(%OWTOOLSVER)
!else ifeq %OWTOOLS GCC
__GCC_TOOLS__ = $(%OWTOOLSVER)
!else ifeq %OWTOOLS CLANG
__CLANG_TOOLS__ = $(%OWTOOLSVER)
!else ifeq %OWTOOLS INTEL
__INTEL_TOOLS__ = $(%OWTOOLSVER)
!else
# if not defined or unknow value, default to WATCOM
__WATCOM_TOOLS__ = 0
!endif

!ifdef %BOOTSTRAP_CPU
bld_cpu = $+$(%BOOTSTRAP_CPU)$-
bld_os = $+$(%BOOTSTRAP_OS)$-
!else ifdef __MSDOS__
bld_cpu = 386
bld_os = dos
!else ifdef __OS2__
bld_cpu = 386
bld_os = os2
!else ifdef __NT386__
bld_cpu = 386
bld_os = nt
!else ifdef __NTX64__
bld_cpu = x64
bld_os = nt
bld64host_nt = 1
bld64host_osi = 1
!else ifdef __NTAXP__
bld_cpu = axp
bld_os = nt
!else ifdef __LINUX386__
bld_cpu = 386
bld_os = linux
!else ifdef __LINUXX64__
bld_cpu = x64
bld_os = linux
bld64host_linux = 1
bld64host_osi = 1
!else ifdef __LINUXMIPS__
bld_cpu = mps
bld_os = linux
!else ifdef __LINUXPPC__
bld_cpu = ppc
bld_os = linux
!else ifdef __LINUXARM__
bld_cpu = arm
bld_os = linux
!else ifdef __BSD386__
bld_cpu = 386
bld_os = bsd
!else ifdef __BSDX64__
bld_cpu = x64
bld_os = bsd
bld64host_bsd = 1
bld64host_osi = 1
!else ifdef __BSDPPC__
bld_cpu = ppc
bld_os = bsd
!else ifdef __HAIKU386__
bld_cpu = 386
bld_os = haiku
!else ifdef __HAIKUX64__
bld_cpu = x64
bld_os = haiku
bld64host_haiku = 1
bld64host_osi = 1
!else ifdef __HAIKUPPC__
bld_cpu = ppc
bld_os = haiku
!else ifdef __OSX386__
bld_cpu = 386
bld_os = osx
!else ifdef __OSXX64__
bld_cpu = x64
bld_os = osx
bld64host_osx = 1
bld64host_osi = 1
!else ifdef __OSXPPC__
bld_cpu = ppc
bld_os = osx
!else ifdef __OSXARM__
bld_cpu = arm
bld_os = osx
!endif

!ifdef nulldevice_$(bld_os)
nulldevice = $(nulldevice_$(bld_os))
!else ifdef __UNIX__
nulldevice = /dev/null
!else
nulldevice = nul
!endif

# default windowing support
!ifdef %OWDEFAULT_WINDOWING
default_windowing = $+$(%OWDEFAULT_WINDOWING)$-
!endif

!include cdirs.mif
