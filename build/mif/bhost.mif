# build host specific macros
bcc_386         = *wcc386
bcc_axp         = *wccaxp
bcc_ppc         = *wccppc
bcc_mps         = *wccmps

bcl_386         = *wcl386
bcl_axp         = *wclaxp
bcl_ppc         = *wclppc
bcl_mps         = *wclmps

blibrarian_386  = *wlib
blibrarian_axp  = *wlib
blibrarian_ppc  = *wlib
blibrarian_mps  = *wlib

bas_386         = *wasm
bas_axp         = *wasaxp
bas_ppc         = *wasppc
bas_mps         = *wasmps

blib            = $(noecho)$(blibrarian_$(bld_cpu)) -q
bcc             = $(bcc_$(bld_cpu)) -zq
bcl             = $(noecho)$(bcl_$(bld_cpu)) -zq
bas             = $(bas_$(bld_cpu)) -q
blink           = *wlink op q

bld_cc_sys      = $(cflags_$(bld_os))
bld_cl_sys      = $(clflags_$(bld_os)_$(bld_cpu))
bld_incs        = $(bld_extra_incs) -I"$(watcom_dir)/h"

bld_cppflags    = $(build_cppflags)

bld_gen_cflags  = -za99-w8-j-fo=.obj
!ifeq release 0
bld_gen_cflags  += -d2
!else
bld_gen_cflags  += -ox
!endif
!ifdef bldnewowtools
bld_gen_cflags  += -xx-zam
!endif

# options for source compilations
bld_cflags      = $(bld_gen_cflags)

# options for single source utility compilations
bld_clflags     = $(bld_cppflags) $(bld_gen_cflags) -fe=$^@

# options for linking
bld_ldflags     =

bld_libflags    = -b-n-pa $^@

bld_cc          = $(bcc) $(bld_cc_sys) $(bld_incs)
bld_cl          = $(bcl) $(bld_cc_sys) $(bld_cl_sys) $(bld_incs)
bld_lib         = $(blib) $(bld_libflags)

awk             = $(noecho)*awk
cpp             = $(noecho)*wcpp
cwc             = bcwc
edbind          = $(noecho)bedbind
ide2make        = bide2mak
re2c            = $(noecho)re2c
sed             = $(noecho)sed
w32bind         = $(noecho)w32bind
wbind           = $(noecho)bwbind
wsplice         = $(noecho)*wsplice
wstrip          = $(noecho)bwstrip
yacc            = $(noecho)yacc

