bind_res_wresui : .PROCEDURE .EXPLICIT
!ifeq verbose 0
    @echo bind wresui $@
!endif
    $(wstrip) -q -a -r $@ . wresui.res

bind_res : .PROCEDURE .EXPLICIT
!ifeq verbose 0
    @echo bind res $@
!endif
    $(rc) -k $^&.res $^@
